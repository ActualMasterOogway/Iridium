{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Erase Build History",
			"type": "shell",
			"command": "sh",
			"args": [
				"-c", 
				"if [ -d 'Distribution' ]; then rm -rf Distribution; else rmdir /s /q Distribution; fi"
			],
			"windows": {
				"command": "cmd",
				"args": [
					"/c", 
					"if exist Distribution (rmdir /s /q Distribution)"
				]
			},
			"group": {
				"kind": "none",
				"isDefault": false
			},
			"options": {
				"cwd": "${workspaceFolder}" 
			},
			"problemMatcher": []
		},
		{
			"label": "Build Iridium",
			"dependsOn": "Erase Build History",
			"type": "shell",
			"command": "lune",
			"args": [
				"run", 
				"Build", 
				"bundle", 
				"header=Build/Header.luau"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"options": {
				"cwd": "${workspaceFolder}" 
			},
			"problemMatcher": []
		},
		{
			"label": "Build and Run Iridium",
			"dependsOn": "Erase Build History",
			"type": "shell",
			"command": "lune",
			"args": [
				"run", 
				"Build", 
				"bundle", 
				"header=Build/Header.luau",
				"minify=false",
				"ci-mode=true",
				"&&",
				"cls",
				"&&",
				"lune",
				"run",
				"init.client.luau"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"options": {
				"cwd": "${workspaceFolder}" 
			},
			"problemMatcher": []
		}
	]
}